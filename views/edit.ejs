    <% if (canciones) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
        <center>
          <div class="card-header" style="background-color: #d8a6f1;">Editar cancion</div>
        </center>
        <div class="card-body">
            <form action="/update" method="POST">
                <input id="id" name="id" value="<%= canciones.id %>" hidden>
                <div class="mb-3">
                    <label for="cancion" class="form-label">Cancion</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" value="<%= canciones.nombre %>">
                </div>
                <h3><%= canciones.cantante %></h3>
                <div class="mb-3">
                    <label for="cancion" class="form-label">Artista</label>
                    <input type="text" class="form-control" id="artista" name="artista" tabindex="1" value="<%= canciones.cantante %>">
                </div>
                <button type="submit" class="btn text-white" style="background-color: #3c033d;" tabindex="5"><i class='bx bx-check-circle'></i> Guardar cambios</button>
                <a href="/" class="btn btn-outline-danger"><i class='bx bx-x'></i> Cancelar</a>
            </form>
        </div>
        </div>
    </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
